= link_to "Home", root_path, :class => 'brand'
%ul.nav.pull-right
  - unless user_signed_in?
    %li
      = link_to 'Login', new_user_session_path
    %li
      = link_to 'Sign Up', new_user_registration_path
  - else
    %li.dropdown
      %a.dropdown-toggle{ :href => '#', :data => { :toggle => 'dropdown' } }
        - avatar = current_user.avatar_image.thumb('25x25#').url if current_user.avatar_image.present?
        = image_tag avatar if avatar.present?
        = current_user.name
      %ul.dropdown-menu
        %li= link_to 'View Profile', user_path(current_user.id)
        %li= link_to 'Edit account', edit_user_registration_path
        %li= link_to 'Logout', destroy_user_session_path, :method=>'delete'
- if user_signed_in?
  %ul.nav
    %li.dropdown
      %a.dropdown-toggle{ :href => '#', :data => { :toggle => 'dropdown' } }
        Tasks
      %ul.dropdown-menu
        %li= link_to 'New Task', new_task_path
        %li= link_to 'View Tasks', tasks_path
  %ul.nav
    %li.dropdown
      %a.dropdown-toggle{ :href => '#', :data => { :toggle => 'dropdown' } }
        Projects
      %ul.dropdown-menu
